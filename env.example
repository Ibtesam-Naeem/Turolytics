# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/turolytics
USE_SQLITE=false

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Bouncie API Configuration
BOUNCIE_CLIENT_ID=your-bouncie-client-id
BOUNCIE_CLIENT_SECRET=your-bouncie-client-secret
BOUNCIE_REDIRECT_URI=http://localhost:8000/auth/bouncie/callback

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Scraping Configuration
SCRAPING_TIMEOUT=300
MAX_CONCURRENT_TASKS=5
SCRAPING_HEADLESS=true
SCRAPING_RETRY_ATTEMPTS=3
SESSION_EXPIRY_HOURS=24

# CORS Configuration
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Logging
LOG_LEVEL=INFO
